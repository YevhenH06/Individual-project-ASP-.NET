@model IEnumerable<Навчальна_практика_Гута.Models.Buyer>
@{
    ViewBag.Title = "Управління покупцями";
}
<h2>Управління покупцями</h2>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
<table class="table table-striped">
    <!-- Заголовки таблиці -->
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Ім'я</th>
            <th>Прізвище</th>
            <th>Телефон</th>
            <th>Email</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Email</td>
                <td>
                    <div class="btn-group" role="group">
                        @Html.ActionLink("Редагувати", "EditBuyer", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                        @Html.ActionLink("Видалити", "DeleteBuyer", new { id = item.Id }, new {
                            @class = "btn btn-danger btn-sm",
                            onclick = "return confirm('Ви впевнені, що хочете видалити цього покупця?')"
                        })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="mt-3">
    @Html.ActionLink("Повернутися до панелі адміністратора", "Index", "Admin", null, new { @class = "btn btn-secondary" })
</div>